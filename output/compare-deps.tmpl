<details>
    <summary>Linter Issues</summary>
    <div style="padding-left: 1ch">
        {{- template "linter-issues.tmpl" .SameFindings -}}
    </div>
</details>
{{- template "totals.tmpl" .SameFindings -}}
<h3>New findings:</h3>
<details>
    <summary>Capabilities</summary>
    <div style="padding-left: 1ch">
        {{- template "capabilities.tmpl" .NewFindings -}}
    </div>
</details>
<details>
    <summary>Linter Issues</summary>
    <div style="padding-left: 1ch">
